<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParkEase"
        tools:targetApi="31">
        <activity
            android:name=".ViewBookedSlotsActivity"
            android:exported="false" />
        <activity
            android:name=".MyVehicleActivity"
            android:exported="true" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />
        <activity android:name=".ReqBookingInfo" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".BookingConfirmedActivity" />
        <activity
            android:name=".FindParkingActivity"
            android:exported="true" /> <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Screen (Opens after Splash) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- Registration Screen -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" /> <!-- Main App Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>