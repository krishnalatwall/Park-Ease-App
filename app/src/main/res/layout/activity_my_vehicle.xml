<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MyVehicleActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/myVehicleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Vehicle"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vehicle Make -->
    <EditText
        android:id="@+id/vehicleMake"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Vehicle Make"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/myVehicleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Vehicle Model -->
    <EditText
        android:id="@+id/vehicleModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Vehicle Model"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/vehicleMake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Vehicle Registration -->
    <EditText
        android:id="@+id/vehicleRegistration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Vehicle Registration"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/vehicleModel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/vehicleRegistration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Display Saved Vehicle Info -->
    <TextView
        android:id="@+id/savedVehicleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No vehicle saved yet"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
